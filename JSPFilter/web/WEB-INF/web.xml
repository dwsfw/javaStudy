<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>testfilter</servlet-name>
        <servlet-class>com.tlb.servlet.ShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>testfilter</servlet-name>
        <url-pattern>/servlet/show</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>com.tlb.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/sys/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutservlet</servlet-name>
        <servlet-class>com.tlb.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutservlet</servlet-name>
        <url-pattern>/sys/logout</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>sysfilter</filter-name>
        <filter-class>com.tlb.filter.sysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sysfilter</filter-name>
        <url-pattern>/sys/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.tlb.filter.TestFiler</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.tlb.listen.OnlineCountListener</listener-class>
    </listener>
</web-app>